{
  "scripts": {
    "build": "rm -rf ./compiled && mkdir ./compiled && npm-run-all build:* && rm -rf ./compiled",
    "build:css": "cssmonster",
    "build:js": "tsc",
    "build:djinn": "djinnjs -e dev",
    "build:render": "node ./build/renderer.js",
    "brixi": "brixi",
    "preview": "serve ./public",
    "bundle": "snowpack install",
    "predeploy": "npm run build",
    "deploy": "node ./deploy.js"
  },
  "dependencies": {
    "brixi": "^0.3.0",
    "djinnjs": "^0.3.1",
    "lit-html": "^1.3.0",
    "tooltipper": "^0.1.3"
  },
  "devDependencies": {
    "cssmonster": "^0.3.1",
    "gh-pages": "^3.1.0",
    "jsdom": "^16.4.0",
    "npm-run-all": "^4.1.5",
    "serve": "^11.3.2",
    "snowpack": "^2.18.4",
    "typescript": "^4.1.3"
  },
  "snowpack": {
    "install": [
      "tooltipper",
      "lit-html"
    ]
  }
}
